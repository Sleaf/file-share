{
  "name": "file-share",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "share": "ts-node src/index.ts"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "date-fns": "^2.8.1",
    "express": "^4.17.1",
    "minimist": "^1.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "pug": "^2.0.4",
    "stylus": "^0.54.7",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.21",
    "@types/stylus": "^0.48.32"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**"
