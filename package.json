{
  "name": "file-share",
  "version": "0.1.4",
  "private": true,
  "main": "src/server/index.ts",
  "bin": "./build/server/index.js",
  "scripts": {
    "cz": "git add -A && git-cz --disable-emoji",
    "dev-cli": "nodemon --config ./nodemon-cli.json ~/Public",
    "start-cli": "ts-node -r tsconfig-paths/register src/server/index.ts",
    "build-pkg": "run-s tsc-tspm pkg",
    "tsc-tspm": "tsc; ef-tspm",
    "pkg": "pkg ./package.json --out-path=dist-pkg/"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.15.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.4",
    "lodash": "^4.17.19",
    "minimist": "^1.2.5",
    "morgan": "^1.10.0",
    "nib": "^1.1.2",
    "nodemon": "^2.0.4",
    "pug": "^3.0.0",
    "stylus": "^0.54.8",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@ef-carbon/tspm": "^2.2.5",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/lodash": "^4.14.158",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/stylus": "^0.48.33",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "pkg": "^4.4.9",
    "tsconfig-paths": "^3.9.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "pkg": {
    "assets": [
      "src/client/public/**/*",
      "src/client/views/**/*",
      "src/client/style/**/*",
      "package.json"
    ]
  }
}
