{
  "name": "file-share",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "cz": "git add -A && git-cz --disable-emoji",
    "dev": "nodemon",
    "share": "yarn && ts-node src/index.ts"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.14.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "lodash": "^4.17.15",
    "minimist": "^1.2.5",
    "morgan": "^1.10.0",
    "nib": "^1.1.2",
    "nodemon": "^2.0.4",
    "pug": "^3.0.0",
    "stylus": "^0.54.7",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.6",
    "@types/express-fileupload": "^1.1.3",
    "@types/lodash": "^4.14.155",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/stylus": "^0.48.33",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**"
    ],
    "watch": [
      "src/**/*",
      "public/**/*"
    ],
    "exec": "yarn share",
    "ext": "ts,js,json"
  }
}
