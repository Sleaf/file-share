{
  "name": "file-share",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "cz": "git add -A && git-cz --disable-emoji",
    "dev": "nodemon ~/Public",
    "share": "ts-node src/index.ts",
    "pkg": "tsc && pkg ./package.json --out-path=dist-pkg/"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "date-fns": "^2.14.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.7-alpha.3",
    "lodash": "^4.17.19",
    "minimist": "^1.2.5",
    "morgan": "^1.10.0",
    "nib": "^1.1.2",
    "nodemon": "^2.0.4",
    "pug": "^3.0.0",
    "stylus": "^0.54.7",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/express-fileupload": "^1.1.3",
    "@types/lodash": "^4.14.157",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "@types/stylus": "^0.48.33",
    "git-cz": "^4.7.0",
    "husky": "^4.2.5",
    "pkg": "^4.4.9"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**",
      "src/views/**/*",
      "src/style/**/*"
    ],
    "watch": [
      "src/**/*"
    ],
    "exec": "yarn share",
    "ext": "ts,js,json"
  },
  "bin": "./build/src/index.js",
  "pkg": {
    "assets": [
      "node_modules/nib/**/*",
      "public/**/*",
      "src/views/**/*",
      "src/style/**/*"
    ]
  }
}
