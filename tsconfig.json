{
  "compilerOptions": {
    /* Basic Options */
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./build",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "pretty": false,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
