{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    /* Basic Options */
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./build-src",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "pretty": false,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es6",
    /* Experimental Options */
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
