{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    /* Basic Options */
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "noImplicitAny": false,
    "outDir": "./build-src",
    "removeComments": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "pretty": false,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
