@import "style/global.styl"
@import "style/page.styl"

.upload-btn
  border-radius 50%
  padding 5px
  width 50px
  height 50px
  position fixed
  right 30px
  bottom 30px
  transition transform ease-in-out 300ms
  transform rotate(180deg)

  &::after
    background url('data:image/png;base64,') no-repeat
    background-size 80%
    background-position center
    width 100%
    height 100%
    content: ''
    display block

  &:hover
    cursor pointer
    transform rotate(360deg)


#upload-input
  visibility hidden
